<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QR Scanner - GGLAINE Style</title>
    <script src="https://unpkg.com/html5-qrcode"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3a0ca3;
            --success-color: #4cc9f0;
            --light-bg: #f8f9fa;
            --dark-bg: #212529;
            --border-radius: 16px;
            --box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .app-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
            padding: 20px;
        }

        .header h1 {
            color: var(--secondary-color);
            font-weight: 700;
            margin-bottom: 10px;
            font-size: 2.5rem;
        }

        .header p {
            color: #6c757d;
            font-size: 1.1rem;
        }

        .control-panel {
            background: white;
            border-radius: var(--border-radius);
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: var(--box-shadow);
        }

        .camera-selector {
            display: flex;
            gap: 15px;
            align-items: center;
            flex-wrap: wrap;
        }

        .form-label {
            font-weight: 600;
            color: var(--secondary-color);
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .form-select, .form-control {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 12px 16px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-select:focus, .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.25);
        }

        .btn {
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            font-size: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            transition: all 0.3s ease;
            border: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 7px 20px rgba(67, 97, 238, 0.4);
        }

        .btn-success {
            background: linear-gradient(135deg, #4cc9f0, #4895ef);
            color: white;
        }

        .btn-danger {
            background: linear-gradient(135deg, #f72585, #b5179e);
            color: white;
        }

        .btn i {
            font-size: 1.1rem;
        }

        .scanner-container {
            display: flex;
            flex-direction: column;
            gap: 30px;
            margin-bottom: 30px;
        }

        @media (min-width: 992px) {
            .scanner-container {
                flex-direction: row;
            }
        }

        .scanner-box {
            flex: 1;
            background: white;
            border-radius: var(--border-radius);
            padding: 25px;
            box-shadow: var(--box-shadow);
            display: flex;
            flex-direction: column;
        }

        .scanner-title {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 20px;
            color: var(--secondary-color);
            font-weight: 600;
            font-size: 1.3rem;
        }

        .scanner-title i {
            font-size: 1.5rem;
        }

        #reader {
            width: 100%;
            height: 400px;
            border-radius: 12px;
            overflow: hidden;
            position: relative;
            border: 3px dashed #e9ecef;
            transition: all 0.3s ease;
        }

        #reader:hover {
            border-color: var(--primary-color);
        }

        #reader video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        #reader__dashboard_section_csr {
            margin-top: 15px;
        }

        .result-box {
            flex: 1;
            background: white;
            border-radius: var(--border-radius);
            padding: 25px;
            box-shadow: var(--box-shadow);
        }

        .result-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .result-title {
            display: flex;
            align-items: center;
            gap: 12px;
            color: var(--secondary-color);
            font-weight: 600;
            font-size: 1.3rem;
        }

        .result-actions {
            display: flex;
            gap: 10px;
        }

        #qr-result {
            width: 100%;
            min-height: 150px;
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 16px;
            font-size: 1rem;
            resize: vertical;
            background-color: #f8f9fa;
            transition: all 0.3s ease;
        }

        #qr-result:focus {
            border-color: var(--primary-color);
            background-color: white;
            outline: none;
        }

        .result-info {
            margin-top: 15px;
            padding: 15px;
            background-color: #f1f8ff;
            border-radius: 10px;
            font-size: 0.9rem;
            color: #495057;
        }

        .result-info i {
            color: var(--primary-color);
            margin-right: 8px;
        }

        .status-indicator {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
            margin-left: 10px;
        }

        .status-active {
            background-color: rgba(76, 201, 240, 0.2);
            color: #4895ef;
        }

        .status-inactive {
            background-color: rgba(108, 117, 125, 0.2);
            color: #6c757d;
        }

        .scan-animation {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, transparent, var(--success-color), transparent);
            animation: scan 2s infinite linear;
            z-index: 10;
        }

        @keyframes scan {
            0% { top: 0; }
            100% { top: 100%; }
        }

        .footer {
            text-align: center;
            margin-top: 40px;
            color: #6c757d;
            font-size: 0.9rem;
            padding: 20px;
        }

        .pulse {
            display: inline-block;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: var(--success-color);
            box-shadow: 0 0 0 rgba(76, 201, 240, 0.4);
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(76, 201, 240, 0.7); }
            70% { box-shadow: 0 0 0 10px rgba(76, 201, 240, 0); }
            100% { box-shadow: 0 0 0 0 rgba(76, 201, 240, 0); }
        }

        .icon-badge {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            font-size: 1.2rem;
        }
    </style>
</head>
<body>
    <div class="app-container">
        <!-- Header -->
        <div class="header">
            <h1><i class="fas fa-qrcode"></i> GGLAINE QR Scanner</h1>
            <p>Quét mã QR nhanh chóng và chính xác với giao diện hiện đại</p>
        </div>

        <!-- Control Panel -->
        <div class="control-panel">
            <div class="camera-selector">
                <div class="flex-grow-1">
                    <label class="form-label">
                        <i class="fas fa-camera"></i> Chọn camera
                    </label>
                    <select id="cameraSelect" class="form-select"></select>
                </div>
                
                <div>
                    <label class="form-label">&nbsp;</label>
                    <div class="d-flex gap-2">
                        <button id="startScan" class="btn btn-primary">
                            <i class="fas fa-play"></i> Bắt đầu quét
                        </button>
                        <button id="stopScan" class="btn btn-danger" disabled>
                            <i class="fas fa-stop"></i> Dừng quét
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="d-flex align-items-center mt-3">
                <div class="pulse me-2"></div>
                <span id="scanStatus" class="status-indicator status-inactive">
                    <i class="fas fa-pause-circle"></i> Chưa quét
                </span>
            </div>
        </div>

        <!-- Main Content -->
        <div class="scanner-container">
            <!-- Scanner Box -->
            <div class="scanner-box">
                <div class="scanner-title">
                    <div class="icon-badge">
                        <i class="fas fa-camera"></i>
                    </div>
                    <span>Camera Preview</span>
                </div>
                
                <div id="reader">
                    <div class="scan-animation"></div>
                </div>
                
                <div class="mt-3">
                    <p class="text-muted small">
                        <i class="fas fa-lightbulb"></i> 
                        Đưa mã QR vào khung hình để quét tự động. Đảm bảo đủ ánh sáng.
                    </p>
                </div>
            </div>

            <!-- Result Box -->
            <div class="result-box">
                <div class="result-header">
                    <div class="result-title">
                        <div class="icon-badge">
                            <i class="fas fa-qrcode"></i>
                        </div>
                        <span>Kết quả quét mã</span>
                    </div>
                    
                    <div class="result-actions">
                        <button id="copyResult" class="btn btn-success btn-sm">
                            <i class="far fa-copy"></i> Copy
                        </button>
                        <button id="clearResult" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-trash-alt"></i> Xóa
                        </button>
                    </div>
                </div>
                
                <textarea 
                    class="form-control" 
                    id="qr-result" 
                    rows="6" 
                    placeholder="Kết quả quét mã QR sẽ hiển thị ở đây..."
                    readonly
                ></textarea>
                
                <div class="result-info">
                    <p><i class="fas fa-info-circle"></i> <strong>Thông tin:</strong></p>
                    <p id="resultMeta" class="mb-0">
                        Đã quét: <span id="scanCount">0</span> mã | 
                        Loại: <span id="codeType">Chưa xác định</span> |
                        <span id="lastScanTime">Chưa quét</span>
                    </p>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="footer">
            <p>GGLAINE QR Scanner v1.0 • Sử dụng thư viện html5-qrcode • Hoạt động tốt trên Chrome, Edge, Firefox</p>
        </div>
    </div>

    <script>
        // DOM Elements
        const resultElement = document.getElementById("qr-result");
        const cameraSelect = document.getElementById("cameraSelect");
        const startBtn = document.getElementById("startScan");
        const stopBtn = document.getElementById("stopScan");
        const copyBtn = document.getElementById("copyResult");
        const clearBtn = document.getElementById("clearResult");
        const scanStatus = document.getElementById("scanStatus");
        const scanCountElement = document.getElementById("scanCount");
        const codeTypeElement = document.getElementById("codeType");
        const lastScanTimeElement = document.getElementById("lastScanTime");
        
        // Variables
        const html5QrCode = new Html5Qrcode("reader");
        let currentCameraId = null;
        let isScanning = false;
        let scanCount = 0;

        // Update UI status
        function updateScanStatus(scanning) {
            isScanning = scanning;
            startBtn.disabled = scanning;
            stopBtn.disabled = !scanning;
            
            if (scanning) {
                scanStatus.innerHTML = '<i class="fas fa-play-circle"></i> Đang quét...';
                scanStatus.className = 'status-indicator status-active';
                startBtn.innerHTML = '<i class="fas fa-sync-alt fa-spin"></i> Đang quét...';
            } else {
                scanStatus.innerHTML = '<i class="fas fa-pause-circle"></i> Dừng quét';
                scanStatus.className = 'status-indicator status-inactive';
                startBtn.innerHTML = '<i class="fas fa-play"></i> Bắt đầu quét';
            }
        }

        // Scan success callback
        function onScanSuccess(decodedText, decodedResult) {
            resultElement.value = decodedText;
            scanCount++;
            scanCountElement.textContent = scanCount;
            
            // Update code type
            const format = decodedResult?.result?.format || 'QR Code';
            codeTypeElement.textContent = format;
            
            // Update last scan time
            const now = new Date();
            lastScanTimeElement.textContent = now.toLocaleTimeString('vi-VN');
            
            // Optional: Play sound on successful scan
            playScanSound();
            
            // Optional: Vibrate if supported
            if (navigator.vibrate) {
                navigator.vibrate(100);
            }
        }

        // Scan failure callback
        function onScanFailure(error) {
            // Ignore most errors, but log for debugging
            console.log("Scan error (normal):", error);
        }

        // Play scan sound
        function playScanSound() {
            try {
                const audioContext = new (window.AudioContext || window.webkitAudioContext)();
                const oscillator = audioContext.createOscillator();
                const gainNode = audioContext.createGain();
                
                oscillator.connect(gainNode);
                gainNode.connect(audioContext.destination);
                
                oscillator.frequency.value = 800;
                oscillator.type = 'sine';
                
                gainNode.gain.setValueAtTime(0.3, audioContext.currentTime);
                gainNode.gain.exponentialRampToValueAtTime(0.01, audioContext.currentTime + 0.5);
                
                oscillator.start(audioContext.currentTime);
                oscillator.stop(audioContext.currentTime + 0.5);
            } catch (e) {
                console.log("Could not play sound:", e);
            }
        }

        // Load available cameras
        function loadCameras() {
            Html5Qrcode.getCameras()
                .then(cameras => {
                    if (!cameras || cameras.length === 0) {
                        cameraSelect.innerHTML = '<option value="">Không tìm thấy camera</option>';
                        startBtn.disabled = true;
                        return;
                    }
                    
                    cameraSelect.innerHTML = '';
                    cameras.forEach((cam, index) => {
                        const option = document.createElement("option");
                        option.value = cam.id;
                        option.text = cam.label || `Camera ${index + 1}`;
                        cameraSelect.appendChild(option);
                    });
                    
                    // Prefer back camera
                    const backCam = cameras.find(cam =>
                        cam.label.toLowerCase().includes("back") ||
                        cam.label.toLowerCase().includes("rear") ||
                        cam.label.toLowerCase().includes("environment")
                    );
                    
                    if (backCam) {
                        cameraSelect.value = backCam.id;
                    } else {
                        cameraSelect.value = cameras[0].id;
                    }
                })
                .catch(err => {
                    console.error("Camera ERROR:", err);
                    cameraSelect.innerHTML = '<option value="">Không truy cập được camera</option>';
                    startBtn.disabled = true;
                });
        }

        // Start scanning
        async function startScanning() {
            if (isScanning) return;
            
            currentCameraId = cameraSelect.value;
            if (!currentCameraId) {
                alert("Vui lòng chọn camera trước khi bắt đầu quét!");
                return;
            }
            
            try {
                await html5QrCode.start(
                    currentCameraId,
                    {
                        fps: 20,
                        qrbox: {
                            width: 300,
                            height: 300
                        },
                        aspectRatio: 1.0,
                        showTorchButtonIfSupported: true
                    },
                    onScanSuccess,
                    onScanFailure
                );
                
                updateScanStatus(true);
            } catch (err) {
                console.error("Failed to start scanning:", err);
                alert("Không thể khởi động camera. Vui lòng kiểm tra quyền truy cập!");
            }
        }

        // Stop scanning
        async function stopScanning() {
            if (!isScanning) return;
            
            try {
                await html5QrCode.stop();
                updateScanStatus(false);
            } catch (err) {
                console.error("Failed to stop scanning:", err);
            }
        }

        // Copy result to clipboard
        copyBtn.addEventListener("click", () => {
            if (!resultElement.value.trim()) {
                alert("Không có nội dung để sao chép!");
                return;
            }
            
            resultElement.select();
            resultElement.setSelectionRange(0, 99999); // For mobile devices
            
            try {
                navigator.clipboard.writeText(resultElement.value)
                    .then(() => {
                        // Visual feedback
                        const originalText = copyBtn.innerHTML;
                        copyBtn.innerHTML = '<i class="fas fa-check"></i> Đã copy!';
                        copyBtn.classList.add('btn-success');
                        
                        setTimeout(() => {
                            copyBtn.innerHTML = originalText;
                            copyBtn.classList.remove('btn-success');
                        }, 2000);
                    })
                    .catch(err => {
                        console.error('Copy failed:', err);
                        alert('Không thể sao chép, vui lòng thử lại!');
                    });
            } catch (err) {
                // Fallback for older browsers
                document.execCommand('copy');
                alert('Đã sao chép vào clipboard!');
            }
        });

        // Clear result
        clearBtn.addEventListener("click", () => {
            resultElement.value = '';
            codeTypeElement.textContent = 'Chưa xác định';
        });

        // Event listeners
        startBtn.addEventListener("click", startScanning);
        stopBtn.addEventListener("click", stopScanning);

        // Initialize on page load
        window.addEventListener('DOMContentLoaded', () => {
            loadCameras();
            updateScanStatus(false);
            
            // Auto-start scanning if URL parameter is set
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('autostart') === 'true') {
                setTimeout(startScanning, 1000);
            }
        });

        // Handle page visibility change
        document.addEventListener('visibilitychange', () => {
            if (document.hidden && isScanning) {
                // Auto stop scanning when page is hidden
                stopScanning();
            }
        });
    </script>
</body>
</html>