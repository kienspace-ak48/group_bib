<style>
    h2 {
        margin-top: 0;
        font-size: 22px;
        font-weight: 700;
        color: #1f2937;
        letter-spacing: -0.3px;
    }

    .section-title {
        margin-top: 20px;
        margin-bottom: 10px;
        font-size: 15px;
        font-weight: 600;
        color: #374151;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    input:focus,
    textarea:focus,
    select:focus {
        border-color: #ff6b00;
        background: #ffffff;
        box-shadow: 0 0 0 2px rgba(255, 107, 0, 0.15);
        outline: none;
    }
