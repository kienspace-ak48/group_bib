                                    <option value="trail">Trail</option>
                                    <option value="virtual">Virtual</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <fieldset class="border p-3 mb-3">
                        <legend class="w-auto px-2">Organizer Info</legend>
                        <div class="mb-2">
                            <label class="form-label">Name</label>
                            <input type="text" name="organizer_name" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Website</label>
                            <input type="text" name="organizer_web" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Fanpage</label>
                            <input type="text" name="organizer_fanpage" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Zalo</label>
                            <input type="text" name="organizer_zalo" class="form-control" />
                        </div>
